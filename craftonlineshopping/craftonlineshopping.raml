mediaType: 
- application/json

annotationTypes:
  annotation: !include annotation.raml

documentation:
  - !include documentation.raml
uses:
  lai: library.raml
  
/product:
 get:
   description: To get list of products.
   responses:
     200:
       body:
         application/json:
           example: !include example/product.raml

 is: lai.traitesduplication 

 /{productID}:
  #  get:
